<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>de.japrost</groupId>
    <artifactId>japrost-parent</artifactId>
    <version>5.0-SNAPSHOT</version>
    <relativePath>./pom.xml</relativePath>
  </parent>

  <artifactId>japrost-parent.</artifactId>
  <packaging>pom</packaging>

  <name>JaProSt</name>
  <description>Java Programming Studio: Site of the parent.</description>
  <url>${japrost.project.url}/${japrost.site.project.path}/</url>

  <properties>
    <!-- START values to be overwritten in sub-projects -->
    <japrost.site.project.path>parent</japrost.site.project.path>
  </properties>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-site-plugin</artifactId>
        <configuration>
          <siteDirectory>${project.basedir}/src/site-docs</siteDirectory>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <distributionManagement>
    <site>
      <id>${japrost.distribution.site.id}</id>
      <name>JaProSt-Site</name>
      <url>${japrost.distribution.site.url}/${japrost.site.project.path}/</url>
    </site>
  </distributionManagement>

</project>
